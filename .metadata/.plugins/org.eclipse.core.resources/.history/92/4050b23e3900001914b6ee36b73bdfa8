package compressString;

public class CompressString2 {
	
	StringBuilder str = new StringBuilder();
	String word = "";
	
	public CompressString2(String s)
	{
		word = s;
	}
	
	public String compress()
	{
		char lastWord = word.charAt(0);
		int count = 1;
		
		for(int i = 1; i<word.length(); i++)
		{
			Character c = word.charAt(i);
			
			if(c == lastWord)
			{
				count++;
			}
			else
			{
				str.append(lastWord);
				str.append(count);
			}
		}
	}
}
